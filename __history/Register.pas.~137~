type
  arrID = array[1..7] of string;
  TFrmRegister = class(TForm)
    edtNaam: TEdit;
    edtVan: TEdit;
    edtID: TEdit;
    chkbox: TCheckBox;
    btnRegister: TButton;
    btnBack: TButton;
    img1: TImage;
    lblNaam: TLabel;
    lblVan: TLabel;
    lblID: TLabel;
